<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="500.0" prefWidth="700.0"
	xmlns="http://javafx.com/javafx/23.0.1"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="com.projeto.projetoFabinho.Controllers.ServiceOS.ServiceOSController">
	<children>
		<VBox layoutX="300.0" layoutY="72.0" prefHeight="500.0"
			prefWidth="700.0" AnchorPane.bottomAnchor="0.0"
			AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
			AnchorPane.topAnchor="0.0">
			<children>
				<GridPane>
					<columnConstraints>
						<ColumnConstraints hgrow="SOMETIMES"
							maxWidth="325.0" minWidth="10.0" prefWidth="100.0" />
						<ColumnConstraints hgrow="SOMETIMES"
							maxWidth="573.0" minWidth="10.0" prefWidth="124.0" />
						<ColumnConstraints hgrow="SOMETIMES"
							maxWidth="516.0" minWidth="10.0" prefWidth="106.0" />
						<ColumnConstraints hgrow="SOMETIMES"
							maxWidth="398.0" minWidth="10.0" prefWidth="118.0" />
						<ColumnConstraints hgrow="SOMETIMES"
							maxWidth="279.0" minWidth="10.0" prefWidth="96.0" />
						<ColumnConstraints hgrow="SOMETIMES"
							maxWidth="196.0" minWidth="10.0" prefWidth="120.0" />
					</columnConstraints>
					<rowConstraints>
						<RowConstraints minHeight="10.0" prefHeight="30.0"
							vgrow="SOMETIMES" />
						<RowConstraints minHeight="10.0" prefHeight="30.0"
							vgrow="SOMETIMES" />
						<RowConstraints minHeight="10.0" prefHeight="30.0"
							vgrow="SOMETIMES" />
					</rowConstraints>
					<VBox.margin>
						<Insets left="20.0" right="20.0" top="30.0" />
					</VBox.margin>
					<children>
						<Label text="Código OS:" />
						<TextField fx:id="idOSField" maxWidth="60.0"
							promptText="Pressione F2 para buscar" GridPane.columnIndex="1" />
						<Label text="Tipo de Serviço:" GridPane.rowIndex="2" />
						<Label text="Código Cliente:" GridPane.columnIndex="2" />
						<TextField fx:id="codigoField" disable="true"
							maxWidth="60.0" GridPane.columnIndex="3" />
						<Label text="Código Veículo:" GridPane.rowIndex="1" />
						<TextField fx:id="veiculoIdField" disable="true"
							maxWidth="60.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
						<TextField fx:id="tipoOS" disable="true"
							minWidth="300.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
						<Label text="Situação:" GridPane.columnIndex="4" />

						<TextField fx:id="situacaoOS" disable="true"
							maxWidth="115.0" prefHeight="25.0" prefWidth="115.0"
							GridPane.columnIndex="5" />
						<Label layoutX="456.0" layoutY="17.0" text="Data Entrada:"
							GridPane.columnIndex="4" GridPane.rowIndex="1" />
						<Label text="Previsão Saída:" GridPane.columnIndex="4"
							GridPane.rowIndex="2" />
						<DatePicker fx:id="entradaOS" disable="true"
							GridPane.columnIndex="5" GridPane.rowIndex="1" />
						<DatePicker fx:id="previsaoOS" disable="true"
							GridPane.columnIndex="5" GridPane.rowIndex="2" />

					</children>
				</GridPane>
				<Label text="Descrição Serviço:">
					<VBox.margin>
						<Insets left="20.0" right="20.0" top="20.0" />
					</VBox.margin>
				</Label>
				<TextArea fx:id="descricaoOS" disable="true"
					prefHeight="200.0" prefWidth="200.0">
					<VBox.margin>
						<Insets left="20.0" right="20.0" top="10.0" />
					</VBox.margin>
				</TextArea>
				<HBox alignment="CENTER_LEFT" prefHeight="0.0"
					prefWidth="200.0">
					<children>
						<Label text="Peças Usadas:">
							<HBox.margin>
								<Insets right="10.0" />
							</HBox.margin>
						</Label>
						<ComboBox fx:id="pecasOS" disable="true"
							onMouseClicked="#removerPeca" prefHeight="25.0" prefWidth="251.0"
							promptText="Selecione as peças">
							<HBox.margin>
								<Insets right="15.0" />
							</HBox.margin>
						</ComboBox>
						<Button fx:id="selecionarPecas" disable="true"
							mnemonicParsing="false" onAction="#abrirSelecionarPecas"
							text="Peças" />
					</children>
					<VBox.margin>
						<Insets left="20.0" right="20.0" top="10.0" />
					</VBox.margin>
				</HBox>
				<HBox alignment="CENTER_LEFT" prefHeight="0.0"
					prefWidth="200.0">
					<children>
						<Label text="Valor do Serviço:   R$">
							<HBox.margin>
								<Insets right="10.0" />
							</HBox.margin>
						</Label>
						<TextField fx:id="valorOS" disable="true"
							maxWidth="100.0">
							<HBox.margin>
								<Insets right="20.0" />
							</HBox.margin>
						</TextField>
					</children>
					<VBox.margin>
						<Insets left="20.0" right="20.0" top="10.0" />
					</VBox.margin>
				</HBox>
				<HBox prefWidth="200.0" spacing="15.0">
					<children>
						<Button fx:id="novoBtn" 
							mnemonicParsing="false" prefHeight="25.0" prefWidth="94.0"
							text="Novo">
							<padding>
								<Insets bottom="4.0" left="15.0" right="15.0" top="4.0" />
							</padding>
							<HBox.margin>
								<Insets />
							</HBox.margin>
						</Button>
						<Button fx:id="editarBtn" mnemonicParsing="false"
							text="Editar">
							<padding>
								<Insets bottom="4.0" left="15.0" right="15.0" top="4.0" />
							</padding>
						</Button>
						<Button fx:id="finalizarBtn" mnemonicParsing="false"
							onAction="#finalizarOS" text="Finalizar OS">
							<padding>
								<Insets bottom="4.0" left="15.0" right="15.0" top="4.0" />
							</padding>
						</Button>
						<Button fx:id="cancelarBtn" mnemonicParsing="false"
							onAction="#cancelarOS" text="Cancelar OS">
							<padding>
								<Insets bottom="4.0" left="15.0" right="15.0" top="4.0" />
							</padding>
						</Button>
						<Button fx:id="reabrirBtn" mnemonicParsing="false"
							onAction="#reabrirOS" text="Reabrir OS">
							<padding>
								<Insets bottom="4.0" left="15.0" right="15.0" top="4.0" />
							</padding>
						</Button>
					</children>
					<VBox.margin>
						<Insets left="20.0" right="20.0" top="20.0" />
					</VBox.margin>
				</HBox>
			</children>
		</VBox>
	</children>
</AnchorPane>
