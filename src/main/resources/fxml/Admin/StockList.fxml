               <TableColumn fx:id="colDataEntrada" prefWidth="106.0" text="Data de Entrada" />
               <TableColumn fx:id="colSituacao" prefWidth="112.0" text="Situação Estoque" />
              </columns>
          </TableView>
      </children>
      <padding>
         <Insets bottom="20.0" left="15.0" right="20.0" top="20.0" />
      </padding>
   </VBox>
</AnchorPane>
